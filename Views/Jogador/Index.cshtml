@model Jogador
@{
    ViewData["Title"] = "Jogadores";
}

    <div class="titulo_pagina">
        <h1>cadastro de @ViewData["Title"]</h1>
    </div>

<form method="POST" action='@Url.Action("Cadastrar")' class="cadastro">

    <div class="campo">
        <label>ID Jogador</label>
        <input name="IdJogador" id="IdJogador" />
    </div>

    <div class="campo">
        <label>ID Equipe</label>
        <select name="IdEquipe" id="IdEquipe">
            <option value = "0">Selecione uma oção abaixo...</option>
            @foreach (var item in ViewBag.teams)
            {
                <option value ="@item.IdEquipe">@item.Nome</option>
            }
        </select>
    </div>

    <div class="campo">
        <label>Nome</label>
        <input type="text" name="Nome" />
    </div>

    <div class="campo">
        <label>Email</label>
        <input type="Email" name="Email" />
    </div>

    <div class="campo">
        <label>Senha</label>
        <input type="password" name="Senha" />
    </div>

    <button class="gradient btn" type="submit">Cadastrar</button>
</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Email</th>
    </thead>
    <tbody>
        @foreach(Jogador p in ViewBag.players){
            <tr>
                <td>@p.IdJogador</td>
                <td>@p.Nome</td>
                <td>@p.Email</td>
            </tr>
        }
    </tbody>
</table>